<%= form_for(property) do |f| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :"物件名" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :"賃料" %>
    <%= f.number_field :price %><span>円</span>
  </div>

  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :"築年数" %>
    <%= f.number_field :year %><span>年</span>
  </div>

  <div class="field">
    <%= f.label :"備考" %>
    <%= f.text_area :note %>
  </div>

  <hr>

  <%= f.fields_for :accesses do |a| %>

    <div class="name">
      <h2 style="font-size: 14px;">
        最寄り駅<%= a.options[:child_index] + 1 %>
      </h2>
    </div>

    <div class="field">
      <%= a.label :"路線名" %>
      <%= a.text_field :route %>
    </div>

    <div class="field">
      <%= a.label :"駅名" %>
      <%= a.text_field :station %>
    </div>

    <div class="field">
      <%= a.label :"徒歩分数" %>
      <%= a.number_field :distance %>分
    </div>

    <%= a.hidden_field :id %>

  <% end %>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>
