<%= form_for(property) do |f| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :"物件名" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :"賃料" %>
    <%= f.number_field :price %><span>円</span>
  </div>

  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :"築年数" %>
    <%= f.number_field :year %><span>年</span>
  </div>

  <div class="field">
    <%= f.label :"備考" %>
    <%= f.text_area :note %>
  </div>

  <hr>

  <%= f.fields_for :accesses do |a| %>

    <h2 style="font-size: 14px;">最寄り駅1</h2>

    <div class="field">
      <%= a.label :"路線名" %>
      <%= a.text_field :route1 %>
    </div>

    <div class="field">
      <%= a.label :"駅名" %>
      <%= a.text_field :station1 %>
    </div>

    <div class="field">
      <%= a.label :"徒歩分数" %>
      <%= a.number_field :distance1 %>分
    </div>

    <h2 style="font-size: 14px;">最寄り駅2</h2>

    <div class="field">
      <%= a.label :"路線名" %>
      <%= a.text_field :route2 %>
    </div>

    <div class="field">
      <%= a.label :"駅名" %>
      <%= a.text_field :station2 %>
    </div>

    <div class="field">
      <%= a.label :"徒歩分数" %>
      <%= a.number_field :distance2 %>分
    </div>

  <% end %>

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>
