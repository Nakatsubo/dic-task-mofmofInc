<p id="notice"><%= notice %></p>

<h2>物件詳細</h2>
<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.price %><span>円</span>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.year %><span>年</span>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.note %>
</p>

<h2>最寄り駅1</h2>
<p>
  <strong>路線名:</strong>
  <%= @access.route1 %>
</p>

<p>
  <strong>駅名:</strong>
  <%= @access.station1 %>
</p>

<p>
  <strong>徒歩分数:</strong>
  <%= @access.distance1 %>分
</p>

<%- if @access.route2 && @access.station2 && @access.distance2 %>

  <h2>最寄り駅2</h2>
  <p>
    <strong>路線名:</strong>
    <%= @access.route2 %>
  </p>

  <p>
    <strong>駅名:</strong>
    <%= @access.station2 %>
  </p>

  <p>
    <strong>徒歩分数:</strong>
    <%= @access.distance2 %>分
  </p>

<% end %>

<%= link_to '更新する', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
