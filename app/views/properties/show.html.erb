<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.price %><span>円</span>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.year %><span>年</span>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.note %>
</p>

<hr>

<% @accesses.each_with_index do |access, i| %>

  <% if access.route.present? && access.station.present? && access.distance.present? %>

    <h2 style="font-size: 14px;">
      最寄り駅<%= i + 1 %>
    </h2>

    <p>
      <strong>路線名:</strong>
      <%= access.route %>
    </p>

    <p>
      <strong>駅名:</strong>
      <%= access.station %>
    </p>

    <p>
      <strong>徒歩分数:</strong>
      <%= access.distance %>分
    </p>

  <% end %>

<% end %>

<%= link_to '更新する', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
