<p id="notice"><%= notice %></p>

<h1>最寄り駅一覧</h1>

<table>
  <thead>
    <tr>
      <th colspan="3" style="text-align: left;">最寄駅1</th>
      <th colspan="3" style="text-align: left;">最寄駅2</th>
    </tr>
    <tr>
      <th>路線名</th>
      <th>駅名</th>
      <th>徒歩分数</th>
      <th>路線名</th>
      <th>駅名</th>
      <th>徒歩分数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accesses.each do |access| %>
      <tr>
        <td><%= access.route1 %></td>
        <td><%= access.station1 %></td>
        <td><%= access.distance1 %>分</td>
        <td><%= access.route2 %></td>
        <td><%= access.station2 %></td>
        <td><%= access.distance2 %>分</td>
        <td><%= link_to '詳細', access %></td>
        <td><%= link_to '編集', edit_access_path(access) %></td>
        <td><%= link_to '削除', access, method: :delete, data: { confirm: '最寄り駅を削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '最寄り駅を登録する', new_access_path %>
